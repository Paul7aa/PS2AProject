<Window
    x:Class="PS2AProject.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PS2AProject.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:uc="clr-namespace:PS2AProject.UserControls"
    xmlns:validation="clr-namespace:PS2AProject.Domain.ValidationRules"
    Title="Firma de Turism Virtual"
    Width="1500"
    Height="1000"
    MinWidth="1000"
    MinHeight="750"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{materialDesign:MaterialDesignFont}"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <Style x:Key="WrappingTextBlock" TargetType="{x:Type TextBlock}">
                        <Setter Property="TextWrapping" Value="Wrap" />
                    </Style>
                    <Style
                        x:Key="NavRailStyle"
                        BasedOn="{StaticResource MaterialDesignNavigationRailTabItem}"
                        TargetType="TabItem">
                        <Setter Property="Height" Value="Auto" />
                        <Setter Property="Width" Value="Auto" />
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <materialDesign:DialogHost CloseOnClickAway="True" IsOpen="{Binding IsDialogHostOpen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
        <materialDesign:DialogHost.DialogContent>
            <Grid>
                <Grid
                    x:Name="AddSejurDialogHost"
                    Margin="10,0,10,0"
                    Visibility="{Binding IsAddSejurDialogHostOpen, Converter={StaticResource BooleanToVisibilityConverter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="20" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            Grid.ColumnSpan="4"
                            HorizontalAlignment="Center"
                            FontSize="20"
                            Text="Adăugare Sejur" />

                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="0,30,0,0"
                            VerticalAlignment="Center"
                            Text="Sezon" />
                        <ComboBox
                            Grid.Row="2"
                            Grid.Column="2"
                            Width="150"
                            Margin="20,30,0,0"
                            VerticalAlignment="Center"
                            ItemsSource="{Binding Sezoane}"
                            SelectedItem="{Binding SelectedSezon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="0,30,0,0"
                            VerticalAlignment="Center"
                            Text="Țara" />
                        <TextBox
                            x:Name="enteredTara"
                            Grid.Row="3"
                            Grid.Column="2"
                            Width="150"
                            Margin="20,30,0,0"
                            VerticalAlignment="Center"
                            MaxLength="50">
                            <TextBox.Text>
                                <Binding
                                    Mode="TwoWay"
                                    Path="EnteredTara"
                                    UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <validation:NotEmptyValidationRule />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>

                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="1"
                            Margin="0,30,0,0"
                            VerticalAlignment="Center"
                            Text="Localitate" />
                        <TextBox
                            x:Name="enteredLocalitate"
                            Grid.Row="4"
                            Grid.Column="2"
                            Width="150"
                            Margin="20,30,0,0"
                            VerticalAlignment="Center"
                            MaxLength="50">
                            <TextBox.Text>
                                <Binding
                                    Mode="TwoWay"
                                    Path="EnteredLocalitate"
                                    UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <validation:NotEmptyValidationRule />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>

                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="1"
                            Margin="0,30,0,0"
                            VerticalAlignment="Center"
                            Text="Început perioadă" />
                        <DatePicker
                            Grid.Row="5"
                            Grid.Column="2"
                            Width="150"
                            Margin="20,30,0,0"
                            VerticalAlignment="Center"
                            DisplayDateStart="{x:Static sys:DateTime.Today}"
                            SelectedDateFormat="Short">
                            <DatePicker.SelectedDate>
                                <Binding
                                    Mode="TwoWay"
                                    Path="EnteredStartDate"
                                    UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules />
                                </Binding>
                            </DatePicker.SelectedDate>
                        </DatePicker>

                        <TextBlock
                            Grid.Row="6"
                            Grid.Column="1"
                            Margin="0,30,0,0"
                            VerticalAlignment="Center"
                            Text="Sfârșit perioadă" />
                        <DatePicker
                            x:Name="enteredEndDate"
                            Grid.Row="6"
                            Grid.Column="2"
                            Width="150"
                            Margin="20,30,0,0"
                            VerticalAlignment="Center"
                            DisplayDateStart="{x:Static sys:DateTime.Today}">
                            <DatePicker.Resources>
                                <validation:BindingProxy x:Key="proxy" Data="{Binding}" />
                            </DatePicker.Resources>
                            <DatePicker.SelectedDate>
                                <Binding
                                    Mode="TwoWay"
                                    Path="EnteredEndDate"
                                    UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <validation:LaterThanStartValidationRule>
                                            <validation:LaterThanStartValidationRule.StartDate>
                                                <validation:Wrapper StartDate="{Binding Data.EnteredStartDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Source={StaticResource proxy}}" />
                                            </validation:LaterThanStartValidationRule.StartDate>
                                        </validation:LaterThanStartValidationRule>
                                    </Binding.ValidationRules>
                                </Binding>
                            </DatePicker.SelectedDate>
                        </DatePicker>

                        <TextBlock
                            Grid.Row="7"
                            Grid.Column="1"
                            Margin="0,30,0,0"
                            VerticalAlignment="Center"
                            Text="Număr nopți" />
                        <TextBox
                            Grid.Row="7"
                            Grid.Column="2"
                            Width="100"
                            Margin="20,30,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            IsReadOnly="True"
                            Text="{Binding CalculatedNights, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />


                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="3"
                            Margin="50,30,0,0"
                            VerticalAlignment="Center"
                            Text="Tip Cazare" />
                        <ComboBox
                            Grid.Row="2"
                            Grid.Column="4"
                            Width="150"
                            Margin="20,30,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            ItemsSource="{Binding TipuriCazare}"
                            SelectedItem="{Binding SelectedTipCazare, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="3"
                            Margin="50,30,0,0"
                            VerticalAlignment="Center"
                            Text="Denumire" />
                        <TextBox
                            x:Name="enteredDenumire"
                            Grid.Row="3"
                            Grid.Column="4"
                            Width="150"
                            Margin="20,30,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            IsReadOnly="False"
                            MaxLength="50">
                            <TextBox.Text>
                                <Binding
                                    Mode="TwoWay"
                                    Path="EnteredDenumire"
                                    UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <validation:NotEmptyValidationRule />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>

                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="3"
                            Margin="50,30,0,0"
                            VerticalAlignment="Center"
                            Text="NrStele" />
                        <ComboBox
                            Grid.Row="4"
                            Grid.Column="4"
                            Width="100"
                            Margin="20,30,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            ItemsSource="{Binding NrStele}"
                            SelectedItem="{Binding SelectedNrStele, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="3"
                            Margin="50,30,0,0"
                            VerticalAlignment="Center"
                            Text="Mese" />
                        <ComboBox
                            Grid.Row="5"
                            Grid.Column="4"
                            Width="150"
                            Margin="20,30,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            ItemsSource="{Binding Mese}"
                            SelectedItem="{Binding SelectedMese, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBlock
                            Grid.Row="6"
                            Grid.Column="3"
                            Margin="50,30,0,0"
                            VerticalAlignment="Center"
                            Text="Facilități" />
                        <TextBox
                            x:Name="enteredFacilitati"
                            Grid.Row="6"
                            Grid.RowSpan="3"
                            Grid.Column="4"
                            Width="150"
                            Height="200"
                            Margin="20,30,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Stretch"
                            materialDesign:TextFieldAssist.CharacterCounterVisibility="Visible"
                            AcceptsReturn="True"
                            IsReadOnly="False"
                            MaxLength="100"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto">
                            <TextBox.Text>
                                <Binding
                                    Mode="TwoWay"
                                    Path="EnteredFacilitati"
                                    UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <validation:NotEmptyValidationRule />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>

                        <TextBlock
                            Grid.Row="8"
                            Grid.Column="1"
                            Margin="0,30,0,0"
                            VerticalAlignment="Center"
                            Text="Transport" />
                        <ComboBox
                            Grid.Row="8"
                            Grid.Column="2"
                            Width="150"
                            Margin="20,30,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            ItemsSource="{Binding Transport}"
                            SelectedItem="{Binding SelectedTransport, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBlock
                            Grid.Row="9"
                            Grid.Column="1"
                            Margin="0,50,0,0"
                            VerticalAlignment="Center"
                            Text="Preț Transport" />
                        <TextBox
                            x:Name="enteredPretTransport"
                            Grid.Row="9"
                            Grid.Column="2"
                            Width="150"
                            Margin="20,50,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            IsReadOnly="False">
                            <TextBox.Text>
                                <Binding
                                    Mode="TwoWay"
                                    Path="EnteredPretTransport"
                                    UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <validation:NotEmptyValidationRule />
                                        <validation:DoubleValidationRule />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>

                        <TextBlock
                            Grid.Row="9"
                            Grid.Column="3"
                            Margin="50,0,0,0"
                            VerticalAlignment="Bottom"
                            Text="Preț Cazare" />
                        <TextBox
                            x:Name="enteredPretCazare"
                            Grid.Row="9"
                            Grid.Column="4"
                            Width="150"
                            Margin="20,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            IsReadOnly="False">
                            <TextBox.Text>
                                <Binding
                                    Mode="TwoWay"
                                    Path="EnteredPretCazare"
                                    UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <validation:NotEmptyValidationRule />
                                        <validation:DoubleValidationRule />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>

                        <Button
                            Grid.Row="10"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            Width="150"
                            Margin="0,50,0,0"
                            HorizontalAlignment="Center"
                            Command="{Binding AddSejurCommand}"
                            Content="Adaugă">
                            <Button.Style>
                                <Style BasedOn="{StaticResource MaterialDesignRaisedButton}" TargetType="Button">
                                    <Setter Property="IsEnabled" Value="False" />
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Path=(Validation.HasError), ElementName=enteredEndDate}" Value="False" />
                                                <Condition Binding="{Binding Path=(Validation.HasError), ElementName=enteredTara}" Value="False" />
                                                <Condition Binding="{Binding Path=(Validation.HasError), ElementName=enteredLocalitate}" Value="False" />
                                                <Condition Binding="{Binding Path=(Validation.HasError), ElementName=enteredDenumire}" Value="False" />
                                                <Condition Binding="{Binding Path=(Validation.HasError), ElementName=enteredFacilitati}" Value="False" />
                                                <Condition Binding="{Binding Path=(Validation.HasError), ElementName=enteredPretTransport}" Value="False" />
                                                <Condition Binding="{Binding Path=(Validation.HasError), ElementName=enteredPretCazare}" Value="False" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="IsEnabled" Value="True" />
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button
                            Grid.Row="10"
                            Grid.Column="3"
                            Grid.ColumnSpan="2"
                            Width="150"
                            Margin="0,50,0,0"
                            HorizontalAlignment="Center"
                            Command="{Binding CloseDialogHost}"
                            Content="Anulează" />

                    </Grid>
                </Grid>

                <Grid Margin="10,0,10,0" Visibility="{Binding IsSejurCazareDialogHostOpen, Converter={StaticResource BooleanToVisibilityConverter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="20" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="20" />
                    </Grid.RowDefinitions>


                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Center"
                        FontSize="20"
                        Text="Detalii Cazare" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="0,20,0,0"
                        Text="Tip Cazare :" />

                    <TextBox
                        Grid.Row="2"
                        Grid.Column="2"
                        Width="150"
                        Margin="20,20,0,0"
                        IsReadOnly="True"
                        Text="{Binding SelectedSejur.TipCazare}" />

                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="0,20,0,0"
                        Text="Denumire :" />

                    <TextBox
                        Grid.Row="3"
                        Grid.Column="2"
                        Width="150"
                        Margin="20,20,0,0"
                        IsReadOnly="True"
                        Text="{Binding SelectedSejur.Denumire}" />

                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="1"
                        Margin="0,20,0,0"
                        Text="NrStele :" />

                    <TextBox
                        Grid.Row="4"
                        Grid.Column="2"
                        Width="150"
                        Margin="20,20,0,0"
                        HorizontalAlignment="Left"
                        IsReadOnly="True"
                        Text="{Binding SelectedSejur.NrStele}" />


                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="1"
                        Margin="0,20,0,0"
                        Text="Mese :" />

                    <TextBox
                        Grid.Row="5"
                        Grid.Column="2"
                        Width="150"
                        Margin="20,20,0,0"
                        HorizontalAlignment="Left"
                        IsReadOnly="True"
                        Text="{Binding SelectedSejur.Mese}" />


                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="1"
                        Margin="0,20,0,0"
                        Text="Facilitati :" />

                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="2"
                        Width="150"
                        Height="Auto"
                        Margin="20,20,0,0"
                        HorizontalAlignment="Left"
                        Text="{Binding SelectedSejur.Facilitati}">
                        <TextBlock.Style>
                            <Style BasedOn="{StaticResource WrappingTextBlock}" TargetType="TextBlock" />
                        </TextBlock.Style>
                    </TextBlock>

                </Grid>

                <Grid
                    x:Name="AddCroazieraDialogHost"
                    Margin="10,0,10,0"
                    Visibility="{Binding IsAddCroazieraDialogHostOpen, Converter={StaticResource BooleanToVisibilityConverter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="20" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="20" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="1"
                                Grid.ColumnSpan="4"
                                HorizontalAlignment="Center"
                                FontSize="20"
                                Text="Adăugare Croazieră" />

                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="0,30,0,0"
                                VerticalAlignment="Center"
                                Text="Sezon" />
                            <ComboBox
                                Grid.Row="2"
                                Grid.Column="2"
                                Width="150"
                                Margin="20,30,0,0"
                                VerticalAlignment="Center"
                                ItemsSource="{Binding Sezoane}"
                                SelectedItem="{Binding SelectedSezon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="1"
                                Margin="0,30,0,0"
                                VerticalAlignment="Center"
                                Text="Țara" />
                            <TextBox
                                x:Name="enteredTaraCroaziera"
                                Grid.Row="3"
                                Grid.Column="2"
                                Width="150"
                                Margin="20,30,0,0"
                                VerticalAlignment="Center"
                                MaxLength="50">
                                <TextBox.Text>
                                    <Binding
                                        Mode="TwoWay"
                                        Path="EnteredTara"
                                        UpdateSourceTrigger="PropertyChanged">
                                        <Binding.ValidationRules>
                                            <validation:NotEmptyValidationRule />
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>

                            <TextBlock
                                Grid.Row="4"
                                Grid.Column="1"
                                Margin="0,30,0,0"
                                VerticalAlignment="Center"
                                Text="Început perioadă" />
                            <DatePicker
                                Grid.Row="4"
                                Grid.Column="2"
                                Width="150"
                                Margin="20,30,0,0"
                                VerticalAlignment="Center"
                                DisplayDateStart="{x:Static sys:DateTime.Today}"
                                SelectedDateFormat="Short">
                                <DatePicker.SelectedDate>
                                    <Binding
                                        Mode="TwoWay"
                                        Path="EnteredStartDate"
                                        UpdateSourceTrigger="PropertyChanged">
                                        <Binding.ValidationRules />
                                    </Binding>
                                </DatePicker.SelectedDate>
                            </DatePicker>

                            <TextBlock
                                Grid.Row="5"
                                Grid.Column="1"
                                Margin="0,30,0,0"
                                VerticalAlignment="Center"
                                Text="Sfârșit perioadă" />
                            <DatePicker
                                x:Name="enteredEndDateCroaziera"
                                Grid.Row="5"
                                Grid.Column="2"
                                Width="150"
                                Margin="20,30,0,0"
                                VerticalAlignment="Center"
                                DisplayDateStart="{x:Static sys:DateTime.Today}">
                                <DatePicker.Resources>
                                    <validation:BindingProxy x:Key="proxy" Data="{Binding}" />
                                </DatePicker.Resources>
                                <DatePicker.SelectedDate>
                                    <Binding
                                        Mode="TwoWay"
                                        Path="EnteredEndDate"
                                        UpdateSourceTrigger="PropertyChanged">
                                        <Binding.ValidationRules>
                                            <validation:LaterThanStartValidationRule>
                                                <validation:LaterThanStartValidationRule.StartDate>
                                                    <validation:Wrapper StartDate="{Binding Data.EnteredStartDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Source={StaticResource proxy}}" />
                                                </validation:LaterThanStartValidationRule.StartDate>
                                            </validation:LaterThanStartValidationRule>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </DatePicker.SelectedDate>
                            </DatePicker>

                            <TextBlock
                                Grid.Row="6"
                                Grid.Column="1"
                                Margin="0,30,0,0"
                                VerticalAlignment="Center"
                                Text="Categorie Vas" />
                            <ComboBox
                                Grid.Row="6"
                                Grid.Column="2"
                                Width="150"
                                Margin="20,30,0,0"
                                VerticalAlignment="Center"
                                ItemsSource="{Binding CategoriiVase}"
                                SelectedItem="{Binding SelectedCategorieVas, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />


                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="3"
                                Margin="50,20,0,0"
                                VerticalAlignment="Center"
                                Text="Traseu" />

                            <TextBox
                                x:Name="enteredTraseuCroaziera"
                                Grid.Row="2"
                                Grid.RowSpan="2"
                                Grid.Column="4"
                                Width="150"
                                Height="110"
                                Margin="20,20,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Stretch"
                                materialDesign:TextFieldAssist.CharacterCounterVisibility="Visible"
                                AcceptsReturn="True"
                                IsReadOnly="False"
                                MaxLength="100"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto">
                                <TextBox.Text>
                                    <Binding
                                        Mode="TwoWay"
                                        Path="EnteredTraseu"
                                        UpdateSourceTrigger="PropertyChanged">
                                        <Binding.ValidationRules>
                                            <validation:NotEmptyValidationRule />
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>


                            <TextBlock
                                Grid.Row="4"
                                Grid.Column="3"
                                Margin="50,20,0,0"
                                VerticalAlignment="Center"
                                Text="Vizite" />

                            <TextBox
                                x:Name="enteredViziteCroaziera"
                                Grid.Row="4"
                                Grid.RowSpan="2"
                                Grid.Column="4"
                                Width="150"
                                Height="110"
                                Margin="20,20,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Stretch"
                                materialDesign:TextFieldAssist.CharacterCounterVisibility="Visible"
                                AcceptsReturn="True"
                                IsReadOnly="False"
                                MaxLength="100"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto">
                                <TextBox.Text>
                                    <Binding
                                        Mode="TwoWay"
                                        Path="EnteredVizite"
                                        UpdateSourceTrigger="PropertyChanged">
                                        <Binding.ValidationRules>
                                            <validation:NotEmptyValidationRule />
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>

                            <TextBlock
                                Grid.Row="6"
                                Grid.Column="3"
                                Margin="50,30,0,0"
                                VerticalAlignment="Center"
                                Text="Facilități" />
                            <TextBox
                                x:Name="enteredFacilitatiCroaziera"
                                Grid.Row="6"
                                Grid.RowSpan="2"
                                Grid.Column="4"
                                Width="150"
                                Height="110"
                                Margin="20,20,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Stretch"
                                materialDesign:TextFieldAssist.CharacterCounterVisibility="Visible"
                                AcceptsReturn="True"
                                IsReadOnly="False"
                                MaxLength="100"
