                                                    </DataGridTemplateColumn>
                                                    <DataGridTextColumn
                                                        Width="*"
                                                        Binding="{Binding IdClient}"
                                                        Header="IdCl"
                                                        IsReadOnly="True" />
                                                    <DataGridTextColumn
                                                        Width="*"
                                                        Binding="{Binding Nume}"
                                                        Header="Nume"
                                                        IsReadOnly="True" />
                                                    <DataGridTextColumn
                                                        Width="*"
                                                        Binding="{Binding Prenume}"
                                                        Header="Prenume"
                                                        IsReadOnly="True" />
                                                    <DataGridTextColumn
                                                        Width="*"
                                                        Binding="{Binding CNP}"
                                                        Header="CNP"
                                                        IsReadOnly="True" />
                                                    <DataGridTextColumn
                                                        Width="*"
                                                        Binding="{Binding Adresa}"
                                                        Header="Adresa"
                                                        IsReadOnly="True" />
                                                    <DataGridTextColumn
                                                        Width="*"
                                                        Binding="{Binding NrTelefon}"
                                                        Header="NrTelefon"
                                                        IsReadOnly="True" />
                                                </DataGrid.Columns>
                                            </DataGrid>

                                        </Grid>
                                    </TabItem.Content>
                                </TabItem>
                                <TabItem
                                    Width="75"
                                    Height="75"
                                    Margin="0,0,100,0">
                                    <TabItem.Header>
                                        <StackPanel Height="Auto">
                                            <materialDesign:PackIcon
                                                Width="24"
                                                Height="24"
                                                HorizontalAlignment="Center"
                                                Kind="Cash" />
                                            <TextBlock HorizontalAlignment="Center" Text="Încasări" />
                                        </StackPanel>
                                    </TabItem.Header>
                                    <TabItem.Content>
                                        <Grid>
                                            <!--  ========= INCASARI CONTENT ==========  -->
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="30" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="30" />
                                                <RowDefinition Height="50" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="200" />
                                            </Grid.RowDefinitions>

                                            <StackPanel
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                Margin="0,0,0,10"
                                                HorizontalAlignment="Left"
                                                Orientation="Horizontal">
                                                <Button
                                                    Width="35"
                                                    Height="35"
                                                    Margin="20,0,0,0"
                                                    Command="{Binding OpenDialogHostCommand}"
                                                    CommandParameter="incasare"
                                                    Content="{materialDesign:PackIcon Kind=PlusThick,
                                                                                      Size=20}"
                                                    Style="{StaticResource MaterialDesignFloatingActionLightButton}" />
                                                <Button
                                                    Width="35"
                                                    Height="35"
                                                    Margin="20,0,0,0"
                                                    Command="{Binding DeleteIncasareCommand}"
                                                    Content="{materialDesign:PackIcon Kind=Delete,
                                                                                      Size=20}"
                                                    Style="{StaticResource MaterialDesignFloatingActionLightButton}" />
                                                <Button
                                                    Width="35"
                                                    Height="35"
                                                    Margin="20,0,0,0"
                                                    Command="{Binding RefreshDataCommand}"
                                                    CommandParameter="incasare"
                                                    Content="{materialDesign:PackIcon Kind=Refresh,
                                                                                      Size=20}"
                                                    Style="{StaticResource MaterialDesignFloatingActionLightButton}" />
                                            </StackPanel>

                                            <DataGrid
                                                Grid.Row="2"
                                                Grid.Column="1"
                                                Width="Auto"
                                                Height="Auto"
                                                Margin="0,10,0,0"
                                                AutoGenerateColumns="False"
                                                BorderBrush="LightBlue"
                                                BorderThickness="0.75"
                                                CanUserDeleteRows="False"
                                                CanUserReorderColumns="False"
                                                CanUserResizeRows="False"
                                                CanUserSortColumns="True"
                                                CellStyle="{StaticResource MaterialDesignDataGridCell}"
                                                ItemsSource="{Binding IncasariList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                SelectedItem="{Binding SelectedIncasare, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                SelectionMode="Single"
                                                SelectionUnit="FullRow">
                                                <DataGrid.Columns>
                                                    <DataGridTemplateColumn>
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <TextBlock
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                                                    Text="*" />
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                    <DataGridTextColumn
                                                        Width="*"
                                                        Binding="{Binding IdIncasare}"
                                                        Header="IdIn"
                                                        IsReadOnly="True" />
                                                    <DataGridTextColumn
                                                        Width="*"
                                                        Binding="{Binding IdClient}"
                                                        Header="IdClient"
                                                        IsReadOnly="True" />
                                                    <DataGridTextColumn
                                                        Width="*"
                                                        Binding="{Binding TipExcursie}"
                                                        Header="TipExcursie"
                                                        IsReadOnly="True" />
                                                    <DataGridTextColumn
                                                        Width="*"
                                                        Binding="{Binding IdExcursie}"
                                                        Header="IdExcursie"
                                                        IsReadOnly="True" />
                                                    <DataGridTextColumn
                                                        Width="*"
                                                        Binding="{Binding Adulti}"
                                                        Header="Adulți"
                                                        IsReadOnly="True" />
                                                    <DataGridTextColumn
                                                        Width="*"
                                                        Binding="{Binding Copii}"
                                                        Header="Copii"
                                                        IsReadOnly="True" />
                                                    <DataGridTextColumn
                                                        Width="*"
                                                        Binding="{Binding ValoareTotala}"
                                                        Header="ValoareTotală"
                                                        IsReadOnly="True" />
                                                    <DataGridTextColumn
                                                        Width="*"
                                                        Binding="{Binding ValoareIncasata}"
                                                        Header="ValoareÎncasată"
                                                        IsReadOnly="True" />
                                                    <DataGridTextColumn
                                                        Width="*"
                                                        Binding="{Binding Reducere}"
                                                        Header="Reducere"
                                                        IsReadOnly="True" />
                                                </DataGrid.Columns>
                                            </DataGrid>

                                        </Grid>
                                    </TabItem.Content>
                                </TabItem>
                            </TabControl>
                        </Grid>
                    </TabItem.Content>
                </TabItem>
            </TabControl>

        </Grid>
    </materialDesign:DialogHost>
</Window>
